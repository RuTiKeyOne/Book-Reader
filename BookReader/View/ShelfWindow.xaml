<Window x:Class="BookReader.View.ShelfWindow"
        x:Name="Shelf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:BookReader.ViewModel"
        mc:Ignorable="d"
        Width="800"
        Height="400"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource LightDarkBaseBrush}">

    <Window.DataContext>
        <ViewModels:ShelfViewModel/>
    </Window.DataContext>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0">
            
            <Button Width="80" Command="{Binding Close}" Style="{StaticResource CloseLightDark}"/>

        </StackPanel>

        <Canvas Grid.Row="1">
            <TextBlock Canvas.Left="50" 
                       Text="{Binding ListBook.NameShelf}" 
                       Style="{StaticResource BaseTextBlock}" 
                       FontSize="{StaticResource TheBiggest}"
                       />
        </Canvas>

        <Grid 
            Grid.Row="2">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.65*"/>
                <ColumnDefinition Width="0.45*"/>
            </Grid.ColumnDefinitions>

            <ListBox
                Margin="15"
                SelectedItem="{Binding SelectedBook}"
                ItemsSource="{Binding ListBooksView}"
                Grid.Column="0"
                Style="{StaticResource ListBoxStyle}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template" Value="{StaticResource ShelfListBookItems}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <StackPanel Grid.Column="1">

                <Button
                    Command="{Binding Add}"
                    Margin="0,5" 
                    Style="{StaticResource ReadButtonLightDark}">

                    <Grid Width="150">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="13*"/>
                            <RowDefinition Height="17*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions >
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="LocalResources/BookIcon.png" Grid.RowSpan="2"></Image>

                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Text="Add a book" Grid.Column="1" Margin="0,2,0,0" Grid.RowSpan="2"></TextBlock>

                    </Grid>

                </Button>

            </StackPanel>

        </Grid>

    </Grid>
</Window>
