<Window x:Class="BookReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookReader"
        mc:Ignorable="d"
        MinWidth="800"
        MinHeight="560"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{StaticResource DarkBaseBrush}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Height="auto">

            <Button Style="{StaticResource Hide}" Content="-"/>
            <Button Style="{StaticResource Close}" Content="х"/>

        </StackPanel>
        
        <Canvas Height="100">
            <TextBlock Canvas.Left="75" Text="Book Reader" Style="{StaticResource HightTextBlock}"/>
        </Canvas>

        <Canvas HorizontalAlignment="Right" Height="200" Width="350">
            <StackPanel Canvas.Right="20">
                <TextBlock Text="Start read" Style="{StaticResource LowTextBlock}"/>
                <Button Style="{StaticResource ReadButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Grid.RowSpan="2"></Image>
                        <TextBlock Text="Add a book" Grid.Column="1"></TextBlock>
                        <TextBlock Grid.Column="1"></TextBlock>
                    </Grid>
                </Button>
                <Button Content="Add a shelf" Style="{StaticResource ReadButton}"></Button>
            </StackPanel>
        </Canvas>
    </StackPanel>
</Window>
